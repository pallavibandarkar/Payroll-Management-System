    <div class="salary-search">
        <form 
           action="/employee/salary-search" 
           method="POST"  class="needs-validation" novalidate >
            <div class="row month" offset="3">

                <div class="col-4">
                    <label for="year" class="form-label"><b>ID:</b></label>
                    <input name="id" id="id" class="form-control"  placeholder="Enter id" required>
            
                </div>

                <div class="col-2">
                    <label for="month" class="form-label"><b>Month:</b></label>
                    <select name="month" id="month" class="form-select" required>
                        <option>Please Make a choice</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                        <option>8</option>
                        <option>9</option>
                        <option>10</option>
                        <option>11</option>
                        <option>12</option>
                    </select>
                </div>

                <div class="col-2">
                    <label for="year" class="form-label"><b>Year:</b></label>
                    <input name="year" id="year" class="form-control"  placeholder="Enter Year" required>
            
                </div>
                
               <div class="col-2 searchbtn">
                <button class="btn btn-success">Search</button>
               </div>
            </div>
        </form>  
