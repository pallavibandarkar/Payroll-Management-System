<% layout("./layouts/boilerpalte.ejs") %>
<head>
    <link rel="stylesheet" href="/css/employeebid.css" >
</head>
<body>
    <nav class="sticky-top">
        <div class="nav_bar">
            <div class="emp_info">
                <div class="emp_photo">
                  <img src="<%=employee.photo.url %>" class="emp_img">
                </div>
                <div class="emp_details">
                    <h5><%=employee.firstname%>&nbsp;&nbsp;<%=employee.lastname%></h5>
                    <h6><i class="fa-solid fa-globe" style="color: green;"></i>&nbsp;Online</h6>
                </div>
            </div>
            <div class="nav-links">
                <div>
                    <a href="http://localhost:8080/employee/<%=employee._id%>/salarySlips"><h6><i class="fa-solid fa-money-bill" style="color: black;"></i>&nbsp;Salary Slips</h6></a>
                </div>
                <div>
                    <a href="http://localhost:8080/employee/<%=employee._id%>/leaves"><h6><i class="fa-solid fa-arrow-right-from-bracket" style="color: black;"></i>&nbsp;Leaves</h6></a>
                </div>
                <div>
                    <h6><i class="fa-solid fa-calendar-days" style="color: black;"></i>&nbsp;Holidays</h6>
                </div>
            </div>
            <div class="punch">
                <form action="http://localhost:8080/employee/<%=employee._id%>/puch-in" method="POST">
                    <button class="btn btn-success">Pucnch-in</button>
                </form>
                
            </div>
            <div class="logout">
                <form action="http://localhost:8080/employee/<%=employee._id%>/puch-out" method="POST">
                    <button class="btn btn-success">Punch-out</button>
                </form>
                
            </div>
        </div>
    </nav>


    <div class="emp_pdetails">
        <table>
            <tbody>
                <tr>
                    <td><b>Fullname</b></td>
                    <td><%=employee.firstname%>&nbsp;<%=employee.lastname%></td>
                    
                    <td><b></b></td>
                    <td><b></b></td>
                    <td><b></b></td>
                </tr>
                <tr>
                    <td><b>DOB</b></td>
                    <td><%=employee.dob%></td>
                </tr>
                <tr>
                    <td><b>Gender</b></td>
                    <td><%=employee.gender%></td>
                </tr>
                
                <tr>
                    <td><b>Address</b></td>
                    <td><%=employee.address%></td>
                </tr>
                <tr>
                    <td><b>City</b></td>
                    <td><%=employee.city%></td>
                </tr>
                <tr>
                    <td><b>State</b></td>
                    <td><%=employee.state%></td>
                </tr>
                <tr>
                    <td><b>Country</b></td>
                    <td><%=employee.country%></td>
                </tr>
                <tr>
                    <td><b>Email Id</td>
                    <td><%=employee.emailid%></td>
                </tr>
                <tr>
                    <td><b>Mobile No.</td>
                    <td><%=employee.contactno%></td>
                </tr>
                <tr>
                    <td><b>Identification  </td>
                    <td><%=employee.identification%></td>
                </tr>
                <tr>
                    <td><b>Id Number </td>
                    <td><%=employee.idnumber%></td>
                </tr>
                <tr>
                    <td><b>Date Of Joining&nbsp;&nbsp;</td>
                    <td><%=employee.doj%></td>
                </tr>
                <tr>
                    <td><b>Grade</td>
                    <td><%=employee.grade%></td>
                </tr>
            </tbody>
            
        </table>
        
    </div>
</body>